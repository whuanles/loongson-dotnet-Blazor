@page "/SystemInfo"
@foreach (var item in BaseInfo)
{
    <h3>@item.Item1</h3>
    <table class="table">
        <thead>
        <tr>
            <th>类型</th>
            <th>信息</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var node in item.Item2)
        {
            <tr>
                <td>@node.Key</td>
                <td>@node.Value</td>
            </tr>
        }
        </tbody>
    </table>
    <p>注：有些信息还需要迭代一次，这里不详细展开</p>
}


